<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/rentsrvcnameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Rental Service Name"
        android:layout_gravity="center"
        android:gravity="center"/>

    <EditText
        android:id="@+id/rentsrvcpriceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Rental Service Price"
        android:layout_gravity="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/rentsaveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="SAVE"/>

    <Button
        android:id="@+id/getrentBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="GET"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rentalRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>